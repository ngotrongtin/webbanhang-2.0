<div class="p-4 text-dark col-sm-3 m-0 position-relative">
    <% if product.img.attached? %>
        <%= image_tag product.img, class: "w-100" %>
    <% else %>
        <img src="data:image/png;base64," class="w-100">
    <% end %>
    <div>
        <p class="m-0">Product's name: <%= product.name %></p>
        <p class="m-0">Price: <%= product.price %></p>
    </div>

    <span class="corner text-decoration-none"><%= link_to "Detail", product, class: "text-decoration-none" %></span>

    <div class="position-absolute top-50 start-50 z-2 translate-middle d-flex">
        <% if current_user && current_user.admin? %>
            <%= link_to "Change", edit_product_path(product), class: "btn btn-primary" %>
            <%= button_to "Delete", product_path(product), method: :delete, class: "btn btn-danger" %>
        <% end %>
        <%= link_to "Add", cart_product_path(product), class: "btn btn-primary" %>
        <%= button_to "Buy", checkout_path, params: { id: product.id }, method: :post, data: {remote: true}, class: "btn btn-success" %>
    </div>
</div>